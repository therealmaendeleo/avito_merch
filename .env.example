# Environment variables для подключения к БД

# PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DATABASE=avito_merch

# Connection Pool для высоконагруженной системы
# Целевые показатели: RPS 1000, Latency 50ms, Availability 99.99%

# Основной пул соединений
DB_POOL_SIZE=100

# Дополнительные соединения при пиковых нагрузках
DB_MAX_OVERFLOW=50

# Таймаут ожидания свободного соединения (секунды)
DB_POOL_TIMEOUT=10

# Время жизни соединения (секунды) - защита от dead connections
DB_POOL_RECYCLE=3600

# Проверка соединения перед использованием
DB_POOL_PRE_PING=true

# Таймаут выполнения SQL запроса (миллисекунды)
DB_STATEMENT_TIMEOUT=5000

# Таймаут команды БД (секунды)
DB_COMMAND_TIMEOUT=30

# Логирование SQL запросов (только для разработки!)
DB_ECHO=false

# JWT настройки
JWT_SECRET_KEY=change-this-secret-key-in-production-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
